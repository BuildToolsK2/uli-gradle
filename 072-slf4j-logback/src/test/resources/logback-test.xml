<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>logback-junit.log</file>
    <encoder>
      <pattern>TEST - %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="FILE" />
  </root>
</configuration>
